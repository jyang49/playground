pipeline {
  agent any 
  options {
    buildDiscarder(logRotator(numToKeepStr: '12'))
    timestamps() 
    retry(2)
  }
  stages {
    stage('Build') { 
      steps {
        echo "build 1"
        echo "build 2"
      }
    }
    stage('Test') { 
      steps {
        echo "test 1"
        error "fail the test"
        echo "test 2"
      }
    }
    stage('Deploy') { 
      steps {
        echo "deploy 1"
        echo "deploy 2"
      }
    }
  }
}
